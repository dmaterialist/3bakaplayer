<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="120.0" maxWidth="400.0" minHeight="75.0" minWidth="400.0" prefHeight="75.0" prefWidth="400.0" style="-fx-background-color: #131313;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="player.AddPlaylistController">
   <children>
      <HBox prefHeight="36.0" prefWidth="400.0" styleClass="background">
         <children>
            <Label prefHeight="36.0" prefWidth="161.0" text="Новое название">
               <HBox.margin>
                  <Insets left="3.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="edit_name" minHeight="22.0" prefHeight="22.0" prefWidth="280.0" style="-fx-background-color: #131313; -fx-font-family: PT Sans; -fx-text-fill: white; -fx-font-size: 14;">
               <HBox.margin>
                  <Insets right="6.0" top="8.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #131313;">
        <buttons>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#cancel" prefHeight="30.0" style="-fx-background-color: #690202; -fx-text-fill: white;" text="Отмена" />
          <Button alignment="CENTER" mnemonicParsing="false" onAction="#ok_boomer" prefHeight="30.0" style="-fx-background-color: #0a4500; -fx-text-fill: white;" text="ОК" />
        </buttons>
         <VBox.margin>
            <Insets right="5.0" />
         </VBox.margin>
      </ButtonBar>
   </children>
</VBox>
